{
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.fontSize": 20,
  "editor.cursorStyle": "block",
  "editor.wordWrap": "on",
  "editor.autoClosingBrackets": "always",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.foldingImportsByDefault": true,
  "editor.stickyScroll.maxLineCount": 3,
  "editor.find.autoFindInSelection": "always",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": true,
  "editor.mouseWheelZoom": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.organizeImports": "always"
  },
  "editor.suggestSelection": "recentlyUsed",
  "diffEditor.codeLens": true,
  "explorer.fileNesting.enabled": true,
  "search.useParentIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": true,
  "scm.alwaysShowRepositories": true,
  "scm.alwaysShowActions": true,
  "terminal.integrated.tabs.defaultColor": "terminal.ansiGreen",
  "css.lint.duplicateProperties": "warning",
  "css.lint.important": "warning",
  "less.lint.duplicateProperties": "warning",
  "less.lint.important": "warning",
  "scss.lint.duplicateProperties": "warning",
  "scss.lint.important": "warning",
  "css.autoValidation": "Save",
  "gitlens.detectNestedRepositories": true,
  "markdown.validate.enabled": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.preferences.importModuleSpecifier": "relative",

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.showUnused": true
  },
  "[php]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
    "editor.tabSize": 2,
    "editor.wrappingIndent": "indent"
  },
  "[blade]": {
    "editor.autoClosingBrackets": "always",
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "onecentlin.laravel-blade"
  },
  "cSpell.words": [
    "codenames",
    "colour",
    "commitlint",
    "datacentres",
    "devs",
    "Eagleson",
    "esbenp",
    "Etyo",
    "Kasper",
    "leerob",
    "nextauth",
    "nextjs",
    "npmrc",
    "pravatar",
    "preload",
    "prettierignore",
    "prettierrc",
    "regexes",
    "lucide",
    "rgba",
    "scaleable",
    "signin",
    "Supabase",
    "superpowered",
    "tailwindcss",
    "typeof",
    "typesafe",
    "Spatie",

    "SolaimanLipi",
    "SutonnyMJ",
    "unoptimized",
    "userinfo",
    "Vercel",
    "Viewports",
    "WEBP",
    "plopfile",
    "clsx",
    "nocache",
    "noimageindex",
    "googleplay",
    "bibaho",
    "shadi",
    "patro",
    "patri",
    "nikah"
  ]
}
